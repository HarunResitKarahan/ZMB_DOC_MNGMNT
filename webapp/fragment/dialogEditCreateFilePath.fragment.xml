<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
	xmlns:table="sap.ui.table"
>
	<Dialog
		draggable="true"
		title="{i18n>createEditFilePath}"
		escapeHandler="._closeDialog"
		class="sapUiContentPadding"
	>
		<content>
			<table:Table
				selectionMode="Single"
				selectionBehavior="RowOnly"
				rows="{jsonModel>/modelFolderListSet}"
				busy="{jsonModel>/documentTreeTableBusy}"
				alternateRowColors="true"
				visibleRowCountMode="Auto"
				rowSelectionChange="onEditCreateTableSelectionChange"
			>
				<table:extension>
					<OverflowToolbar style="Clear">
						<Title text="{i18n>filePath}s ({= ${jsonModel>/modelFolderListSet}.length})" />
						<ToolbarSpacer />
						<Button
							icon="sap-icon://add"
							tooltip="{i18n>add}"
							type="Ghost"
							press="_openDialogOnADialog('dialogEditCreateFilePath','addFilePath')"
						/>
						<Button
							icon="sap-icon://edit"
							tooltip="{i18n>edit}"
							type="Ghost"
							enabled="{jsonModel>/dialogEditCreateVariables/editButtonEnabled}"
							press="_editSelectedRow"
						/>
						<Button
							icon="sap-icon://delete"
							tooltip="{i18n>delete}"
							type="Ghost"
							enabled="{jsonModel>/dialogEditCreateVariables/deleteButtonEnabled}"
							press="_deleteSelectedRow"
						/>
						<SearchField
							placeholder="{i18n>search---}"
							width="15rem"
							liveChange="onDialogEditCreateTableBasicSearch"
						/>
						<!-- <Button
                            icon="sap-icon://sort"
                            tooltip="{i18n>sorting}"
                            type="Ghost"
                            press="_openDialog('vDialogDocumentSort')"
                        /> -->
						<Button
							icon="sap-icon://clear-all"
							tooltip="{i18n>unselectAll}"
							type="Ghost"
							enabled="{jsonModel>/dialogEditCreateVariables/unselectButtonEnabled}"
							press="._unselectAll"
						/>
						<Button
							icon="sap-icon://refresh"
							tooltip="{i18n>refresh}"
							type="Ghost"
							press="._fetchFilePaths"
						/>
					</OverflowToolbar>
				</table:extension>
				<table:columns>
					<table:Column
						width="8rem"
						autoResizable="true"
						sortProperty="Kytno"
						filterProperty="Kytno"
						filterOperator="Contains"
					>
						<Label text="{i18n>recordNo}" />
						<table:template>
							<FlexBox>
								<c:Icon
									class="sapUiTinyMarginBegin sapUiSmallMarginEnd"
									src="{jsonModel>iconSrc}"
								/>
								<Text
									text="{
										path: 'jsonModel>Kytno',
										type: 'sap.ui.model.odata.type.String',
										constraints: {
											isDigitSequence: true,
											maxLength: 10
										}
									}"
									wrapping="false"
								/>
							</FlexBox>
						</table:template>
					</table:Column>
					<table:Column
						width="5rem"
						autoResizable="true"
						sortProperty="Zgptid"
					>
						<Label text="{i18n>gptId}" />
						<table:template>
							<Text
								text="{jsonModel>Zgptid}"
								wrapping="false"
							/>
						</table:template>
					</table:Column>
					<table:Column
						width="auto"
						autoResizable="true"
						sortProperty="ZfolderPath"
					>
						<Label text="{i18n>folderPath}" />
						<table:template>
							<Text
								text="{jsonModel>ZfolderPath}"
								wrapping="false"
							/>
						</table:template>
					</table:Column>
					<table:Column
						width="10rem"
						autoResizable="true"
						sortProperty="Ernam"
					>
						<Label text="{i18n>createdBy}" />
						<table:template>
							<Text
								text="{jsonModel>Ernam}"
								wrapping="false"
							/>
						</table:template>
					</table:Column>
					<table:Column
						width="10rem"
						autoResizable="true"
						sortProperty="Erdat"
					>
						<Label text="{i18n>createDate}" />
						<table:template>
							<Text
								text="{
									path: 'jsonModel>Erdat',
									type: 'sap.ui.model.type.DateTime',
									formatOptions: {
										pattern: 'dd/MM/yyyy'
									}
								}"
								wrapping="false"
							/>
						</table:template>
					</table:Column>
					<table:Column
						width="10rem"
						autoResizable="true"
						sortProperty="Aenam"
					>
						<Label text="{i18n>changedBy}" />
						<table:template>
							<Text
								text="{jsonModel>Aenam}"
								wrapping="false"
							/>
						</table:template>
					</table:Column>
					<table:Column
						width="10rem"
						autoResizable="true"
						sortProperty="Aedat"
					>
						<Label text="{i18n>changeDate}" />
						<table:template>
							<Text
								text="{
									path: 'jsonModel>Aedat',
									type: 'sap.ui.model.type.DateTime',
									formatOptions: {
										pattern: 'dd/MM/yyyy'
									}
								}"
								wrapping="false"
							/>
						</table:template>
					</table:Column>
				</table:columns>
				<table:noData>
					<IllustratedMessage illustrationSize="Base"/>
				</table:noData>
			</table:Table>
		</content>
		<!-- <beginButton>
			<Button
				icon="sap-icon://save"
				text="{i18n>save}"
			/>
		</beginButton> -->
		<endButton>
			<Button text="{i18n>cancel}" press="_closeDialog"/>
		</endButton>
	</Dialog>
</c:FragmentDefinition>